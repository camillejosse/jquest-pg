<div class="pg__level__round__gender" ui-view>
  <div class="card card-block">
    <fieldset ng-repeat="mandature in level.mandatures track by mandature.id"
         class="pg__level__round__gender__person"
         ng-show="round.isCurrentAssignment(mandature)">
      <div class="pg__level__round__gender__person__stack">
        <div class="pg__level__round__gender__person__stack__image pg__level__round__gender__person__stack__image--{{ mandature.person.choice }} img-thumbnail">
          <img ng-src="http://placehold.it/200x250/B3A2B3/fff" />
          <div class="pg__level__round__gender__person__stack__image__legend">
            <div class="pg__level__round__gender__person__stack__image__legend__fullname">{{ mandature.person.fullname }}</div>
            <div class="pg__level__round__gender__person__stack__image__legend__legislature">{{ mandature.legislature.name }}</div>
          </div>
        </div>
      </div>
      <div class="pg__level__round__gender__person__choices">
        <button class="pg__level__round__gender__person__choices__btn pg__level__round__gender__person__choices__btn--male btn btn-lg"
                ng-click="gender.male(mandature.person)">
          Male
        </button>
        <button class="pg__level__round__gender__person__choices__btn pg__level__round__gender__person__choices__btn--other btn btn-sm"
                ng-click="gender.other(mandature.person)">
          Other
        </button>
        <button class="pg__level__round__gender__person__choices__btn  pg__level__round__gender__person__choices__btn--female btn btn-lg"
                ng-click="gender.female(mandature.person)">
          Female
        </button>
      </div>
    </fieldset>
  </div>
</div>
