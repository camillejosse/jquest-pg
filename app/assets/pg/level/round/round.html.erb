<div class="pg__level__round container">
  <div class="row">
    <div class="col-lg-8">
      <div class="card pg__level__round__heading">
        <div class="card-block">
          <h3 class="card-title">
            <span class="pg__level__round__heading__level">{{ level.title }}</span>
            <span class="pg__level__round__heading__round">{{ round.title }}</span>
          </h3>
          <div class="lead">{{ level.description }}</div>
        </div>
      </div>
      <div ui-view></div>
    </div>
    <div class="col-lg-4 pg__level__round__overview">
      <div class="row">
        <div class="col-xs-6 col-lg-12">
          <div class="pg__level__round__overview__progress card">
            <div class="card-block">
              {{ pg.progression().remaining_assignments }} tasks remaining before next round.
              <progress class="progress pg__level__round__overview__progress__bar" value="{{ pg.progress() }}" max="100">
                <div class="progress">
                  <span class="progress-bar" ng-style="{ width: pg.progress() + '%' }">
                    {{ pg.progress() }}%
                  </span>
                </div>
              </progress>
            </div>
          </div>
        </div>
        <div class="col-xs-6 col-lg-12" ng-show="season.courseMaterials.length">
          <div class="pg__level__round__overview__course-material card card-inverse">
            <div class="card-block card-text">
              <h3 class="card-title">
                <i class="fa fa-graduation-cap"></i> Course Materials
              </h3>
              <p>Those documents help you to achieve your mission by learning the best datajournalism techniques.</p>
              <ul>
                <li ng-repeat="courseMaterial in season.courseMaterials">
                  <a ng-click="courseMaterials.select(courseMaterial)">
                    <div>
                      {{ courseMaterial.title }}
                    </div>
                    <div class="small" ng-show="courseMaterial.category">
                      <em>{{ courseMaterial.category }}</em>
                    </div>
                  </a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
